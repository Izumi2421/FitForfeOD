<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF2E0"
    android:id="@+id/loginPage">

    <!-- Background Image Covering Whole Screen -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fitness2" />

    <!-- Welcome Section -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inknut_antiqua_light"
            android:text="Welcome"
            android:textColor="#6BFDDF"
            android:textSize="60sp"
            android:textStyle="bold"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="8"
            android:letterSpacing="0.05"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inknut_antiqua_light"
            android:text="Let's become Fit!"
            android:textColor="#F3FFFD"
            android:textSize="30sp"
            android:textStyle="italic"
            android:shadowColor="#40000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:letterSpacing="0.03"
            android:layout_below="@id/welcomeText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <!-- Input Fields -->
    <RelativeLayout
        android:id="@+id/inputFields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerLayout"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg1"
            android:hint="Enter your email"
            android:textAlignment="center"
            android:textSize="20sp"
            android:padding="15dp"
            android:textColorHint="@color/white"/>

        <EditText
            android:id="@+id/pword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/editTextTextEmailAddress"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg1"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="20sp"
            android:padding="15dp"
            android:textColorHint="@color/white"/>

        <TextView
            android:id="@+id/forgotPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_below="@id/pword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

    <!-- Login Button -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/loginbt"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:background="@drawable/bg2"
            android:gravity="center"
            android:text="LOGIN"
            android:fontFamily="@font/inknut_antiqua_light"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"/>
    </RelativeLayout>
</RelativeLayout>
