<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment"
    android:background="@drawable/white2">

    <TextView
        android:id="@+id/textSlideshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <ScrollView
        android:id="@+id/scrollViewDays"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/dayContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:id="@+id/planTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Training"
                android:textSize="44sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/bg0"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/backkk" />

            <Button
                android:id="@+id/day1Label"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Day 1"
                android:textSize="30sp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:background="@drawable/bg0"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/day2Label"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Day 2"
                android:textSize="30sp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:background="@drawable/bg0"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/day3Label"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Day 3"
                android:textSize="30sp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:background="@drawable/bg0"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/day4Label"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Day 4"
                android:textSize="30sp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:background="@drawable/bg0"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/day5Label"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Day 5"
                android:textSize="30sp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:background="@drawable/bg0"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/day6Label"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Day 6"
                android:textSize="30sp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:background="@drawable/bg0"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/day7Label"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Day 7"
                android:textSize="30sp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:background="@drawable/bg0"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/day8Label"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Day 8"
                android:textSize="30sp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:background="@drawable/bg0"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/day9Label"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="Day 9"
                android:textSize="30sp"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:background="@drawable/bg0"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
